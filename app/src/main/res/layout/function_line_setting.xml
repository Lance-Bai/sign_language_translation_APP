<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/light_mode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/dark_mode_switch_text"
            android:textStyle="bold"
            android:textOn="On"

            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/translate_mode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/translate_mode_text"
            android:textStyle="bold"
            android:textOn="On"

            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/photo_mode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/photo_mode"
            android:textStyle="bold"
            android:textOn="On" />
    </LinearLayout>
<!--    <LinearLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="70dp"-->
<!--        android:orientation="horizontal">-->

<!--        <androidx.appcompat.widget.SwitchCompat-->
<!--            android:id="@+id/switch3"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_weight="1"-->
<!--            android:text="Setting_3" />-->
<!--    </LinearLayout>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/select_app_Language"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:text="@string/language_app_choose_spinner_text" />

        <Spinner
            android:id="@+id/spinner_app_language"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:entries="@array/applanguage"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/selectLanguage"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:text="@string/language_choose_spinner_text" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:entries="@array/language"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text_size"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingTop="15dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="@string/setting_fontsize"/>

        <SeekBar
            android:id="@+id/seekBar_textsize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="5"
            android:progress="1"
            android:thumb="@drawable/ic_thumb"
            android:tickMark="@drawable/ic_tick_mark"
            android:tickMarkTint="@color/grey_DarkGrey"
            android:tickMarkTintMode="src_in"
            >
        </SeekBar>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical">
        <Button
            android:id="@+id/log_out_button"
            android:layout_marginTop="10dp"
            android:layout_gravity="center|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Setting_3" />
    </LinearLayout>



</LinearLayout>